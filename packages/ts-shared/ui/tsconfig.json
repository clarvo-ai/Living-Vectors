{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "..",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@repo/ui/*": ["./src/*"],
      "@repo/ui/shared/*": ["./src/shared/*"],
      "@repo/ui/components/*": ["./src/components/*"],
      "@repo/ui/config": ["./src/config.ts"],
      "@repo/lib/*": ["../lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
